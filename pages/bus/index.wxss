/* index.wxss */
::-webkit-scrollbar{
   width: 0; 
}
.search{
  border-bottom: 1px solid #f5f5f5;
  margin: 0 10px;
}
.location{
  font-size: 14px;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10px;
}
.location .icon{
  font-size: 14px;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
}
.location .city{
  font-size: 12px;
  color: #999;
}
.location image{
  width: 25px;
  height: 25px;
}
.location .btn{
   display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #48C23D;
}
.empty{
  font-size: 14px;
  padding: 20px 0;
  text-align: center;
  color: #ff0000;
}
.buslist{
  padding: 10px;
}
.list-content{
  width: 100%;
  font-size: 14px;
   display: flex;
  display: -webkit-flex;
  flex-direction: row; 
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch; 
  white-space: nowrap;
  padding: 10px 0;
}
.list-content .row{
  display:flex;
  display:-webkit-flex;
  flex-direction:column;
  margin-right:10px;
  width:20px;
}
.list-content .row .num{
  font-size: 12px;
  border: 1px solid #48C23D;
  border-radius: 50%;
  width: 10px;
  height: 10px;
  padding: 3px;
  display:flex;
  display:-webkit-flex;
  justify-content: center;
  align-items: center;
}
.list-content .row .key{
  white-space: pre-wrap;
  text-align: center;
  margin-top: 10px;
}
.item .intro{
  padding: 10px 0;
  font-size: 14px;
  background: #f5f5f5;
}