/* index.wxss */
.container{
  width:90%;
  margin:0 auto;
  border:1px solid #48C23D;
  margin-top:30px;
  margin-bottom: 30px;
}
.title{
  width:100%;
  height:50px;
  line-height:50px;
  text-align:center;
  background: #48C23D;
  color:#fff;
}
.header{
  border-bottom:1px dashed #ccc;
  text-align: center;
  padding:20px;
  line-height: 1.5;
  margin: 0 10px;
}
.header .day{
  font-size: 100px;
  color:#48C23D;
  text-align: center;
  line-height: 1.2;
}
.sa{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 15px;
}
.sa-title{
  text-align: center;
  height: 30px;
  font-size: 14px;
}
.sa view{
  flex: 1;
}
.suit view{
  color:#ff0000;
}
.sa-con{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  width:100%;
}
.sa-con .item{
  /* width:50%; */
  text-align: center;
  display: block;
  font-size: 14px;
  line-height: 2;
  padding:0 5px;
}
.picker{
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-top:1px solid #48C23D;
  font-size: 12px;
  color: #48C23D;
}