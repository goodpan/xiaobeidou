/* index.wxss */
.container{
  font-size: 14px;
}
.tab-date{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10px;
  background: #f5f5f5;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
}
.tab-content{
  margin-top: 40px;
}
.tab-item .on{
  color: #f85959;
}
.cons-name{
  text-align: center;
  padding: 20px 0;
  font-size: 20px;
  font-weight: 700;
}
.header{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 10px;
}
.header .logo{
  width: 120px;
  height: 120px;
  border-radius: 50%;
  background: #f5f5f5;
}
.header .logo image{
  width: 100%;
}
.title-list{
    width: 60%;
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    justify-content: center;
}
.title-date{
  color: #e23674;
  text-align: center;
  margin-bottom: 20px;
}
.item{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
  line-height: 1.5; 
  font-size: 14px
}
.item .name{
  width: 40%;
}
.con-list{
   padding: 10px;
   background: #f5f5f5;
   line-height: 2; 
   margin: 20px 0;
   font-size: 14px;
   display: flex;
   display: -webkit-flex;
   flex-direction: row;
   justify-content: space-between;
}
.des{
  padding: 0 10px;
  
}
.des .title{
  padding: 10px 0;
  color: #e23674;
}
.des .con{
  line-height: 1.5;
}
.des .meta{
  font-size: 12px;
  color: #999;
  margin-bottom: 10px;
}
.header-week{
  text-align: center;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 20px;
  border-bottom: 1px solid #f5f5f5;
}
.header-week .logo{
  width: 150px;
  border-radius: 50%;
  background: #f5f5f5;
}
.header-week .logo image{
  width: 100%;
}
.header-week .title{
  color: #f85959;
  padding: 10px 0;
}
