/* index.wxss */
.item{
  font-size:13px;
  padding: 15px;
  border-bottom: 1px solid #f5f5f5;
  line-height: 1.5;
}
.item .title{
  font-size:16px;
  height: 30px;
  position: relative;
  border-bottom: 1px solid #f5f5f5;
}
.item .title::before{
  display: block;
  position: absolute;
  top: 0;
  left:-13px;
  width:3px;
  background: #48C23D;
  height: 100%;
  content:'';
}
.item .intro{
  padding-top: 15px;
}